<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoappleatorios2"
    tools:context="com.example.ssroman.appleatorios.Sorteos">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:alpha="0.5">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_sorteos" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERAR SORTEO"
                android:fontFamily="serif"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº MÁXIMO"
                    android:layout_marginLeft="5dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/maximo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº DE PREMIOS"
                    android:layout_marginLeft="5dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/premios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reintegro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº DE REINTEGROS"
                    android:layout_marginLeft="5dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:textSize="24sp"/>

                <EditText
                    android:id="@+id/edit_reintegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nº MÁX. REINTEGRO"
                    android:layout_marginLeft="5dp"

                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/maximo_reintegro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/generar2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:onClick="generarSorteo"
                    android:layout_gravity="center_horizontal"
                    android:text="Generar sorteo"
                    style="@android:style/Widget.Button.Inset"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:alpha="0.75"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/resultadoSorteo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Números ganadores: "
                    android:textSize="18sp"
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:color/white"/>

                <TextView
                    android:id="@+id/resultadoReintegro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reintegro/s: "
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible"
                    android:background="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
